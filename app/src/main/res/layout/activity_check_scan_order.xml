<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="5dip" >

        <TextView
            android:id="@+id/tv_bianhao_cx3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dip"
            android:paddingTop="7dip"
            android:text="@string/number"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:id="@+id/tv_checkID"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/select_number"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_scan_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="5dip" >

        <TextView
            android:id="@+id/tv_huowei_cx3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dip"
            android:paddingTop="7dip"
            android:text="@string/location"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:id="@+id/tv_positionID"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint=""
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:gravity="center|left"
        android:paddingLeft="10dip"
        android:text="@string/if_negative"
        android:textColor="#f3731c"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@color/divider"
            android:dividerHeight="1dip"
            android:listSelector="#00000000" >
        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/divider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="@string/quantity"
            android:textColor="@color/view"
            android:textSize="@dimen/textsize20" />

        <TextView
            android:id="@+id/tv_amounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/red_dark_text"
            android:textSize="@dimen/textsize20" />
    </LinearLayout>

</LinearLayout>