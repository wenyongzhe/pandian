<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_63"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="@string/length_limit_mode"
                android:textColor="@color/blue"
                android:textSize="@dimen/textsize22" />

            <Spinner
                android:id="@+id/spinner01"
                style="@style/style_spinner" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_length_limint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="20dip"
                android:text="@string/length_equal"
                android:textColor="@color/view"
                android:textSize="@dimen/textsize22" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_marginTop="5dip"
                android:enabled="false"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/tv_limit_numb1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <EditText
                    android:id="@+id/tv_limit_numb2"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <EditText
                    android:id="@+id/tv_limit_numb3"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>
            <!--  -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/tv_limit_numb4"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <EditText
                    android:id="@+id/tv_limit_numb5"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <EditText
                    android:id="@+id/tv_limit_numb6"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>
            <!--  -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_limit_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="start"
                android:paddingLeft="20dip"
                android:text="@string/range_limit"
                android:textColor="@color/view"
                android:textSize="@dimen/textsize22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="@string/small_value"
                        android:textColor="@color/view"
                        android:textSize="@dimen/textsize22" />

                    <EditText
                        android:id="@+id/tv_limit_range_min"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/view"
                        android:textSize="@dimen/textsize22" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/large_value"
                        android:textColor="@color/view"
                        android:textSize="@dimen/textsize22" />

                    <EditText
                        android:id="@+id/tv_limit_range_max"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/view"
                        android:textSize="@dimen/textsize22" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="5dip"
            android:background="@color/view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_63"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="@string/intercept_save_code"
                android:textColor="@color/blue"
                android:textSize="@dimen/textsize22" />

            <Spinner
                android:id="@+id/spinner02"
                style="@style/style_spinner" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cut_or_keep_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cut_or_keep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dip"
                android:text="@string/reserved_digit"
                android:textColor="@color/view"
                android:textSize="@dimen/textsize22" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/tv_cut_or_keep_num"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/view" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_90"
            android:background="@color/title_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_select_yellow"
                android:paddingBottom="10dip"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:paddingTop="10dip"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize24" />
        </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>