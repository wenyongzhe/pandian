<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60"
        android:background="@color/title_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_import_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/import_btn"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        

        <TextView
            android:id="@+id/tv_export_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/export"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        

        <TextView
            android:id="@+id/tv_display_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/scan_display"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />


        <!-- <TextView
            android:id="@+id/tv_erp_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="ERP设置"
            android:textColor="@color/gray_text"
            android:textSize="20sp" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_import_setting"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/view" />

        <View
            android:id="@+id/view_export_setting"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/view" />

        <View
            android:id="@+id/view_display_setting"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/view" />

       <!--  <View
            android:id="@+id/view_erp_setting"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/view" /> -->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/show_setting_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green" >
    </RelativeLayout>

</LinearLayout>