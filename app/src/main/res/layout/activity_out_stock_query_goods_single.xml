<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30"
        android:background="@color/gray_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_bianhao_cx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="@string/number_tv"
                android:textColor="@color/gray_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_checkid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:textColor="@color/gray_text"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_huowei_cx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_tv"
                android:textColor="@color/gray_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_positionid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray_text"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barcode_tv"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize22" />

        <EditText
            android:id="@+id/et_check_barcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:background="@null"
            android:hint="@string/hint_text"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/barcode_tv"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:id="@+id/tv_barcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_display_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="5dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/line_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_title0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingLeft="10dip"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_color0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_sizeid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_sizeid0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size_id_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_sizeid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_big"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_big0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/major_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text=""
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_small0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/small_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text=""
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/line_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tv_price0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text=""
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_size0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_stockcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_stockcount0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_stockcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_num0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text=""
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_style0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/girard_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text=""
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_colorid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_colorid0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color_id_tv"
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />

                <TextView
                    android:id="@+id/tv_colorid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text=""
                    android:textColor="@color/view"
                    android:textSize="@dimen/textsize22" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/tv_store_out_num"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_90"
        android:background="@color/title_bg"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/btn_select_yellow"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="@string/query_title"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize24" />

        <Button
            android:id="@+id/btn_cancl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="60dip"
            android:layout_weight="1"
            android:background="@drawable/btn_select_yellow"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize24" />
    </LinearLayout>

</LinearLayout>