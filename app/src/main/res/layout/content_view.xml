<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:background="#00000000" 
    android:orientation="vertical"  
    android:padding="5dp"> 
 
    
    <TextView 
        android:id="@+id/content_view_text1" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="0%" 
        android:textColor="#000000" 
        android:layout_marginTop="5dp" 
        android:layout_marginLeft="15dp" 
      /> 
       <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/content_view_text1"
        android:layout_alignBottom="@+id/content_view_text1"
        android:layout_marginLeft="48dp"
        android:layout_toRightOf="@+id/content_view_text1"
        android:text="TextView" />
    <ProgressBar  
        android:id="@+id/content_view_progress" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@id/textView1"
        style="@android:style/Widget.ProgressBar.Horizontal" 
        android:max="100" 
        android:layout_marginTop="4dp" 
        /> 

   
 
 </RelativeLayout> 