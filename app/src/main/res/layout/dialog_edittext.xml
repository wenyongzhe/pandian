<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1.0"
        android:gravity="left|center_vertical"
        android:background="@drawable/dialog_topbg"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/dialog_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="5dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_line2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="left|center"
            android:src="@android:color/holo_blue_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentPanel1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/dialog_text_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:scrollbars="vertical" >
        <EditText
            android:id="@+id/dialog_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_edit"
            android:textSize="20sp"
            android:singleLine="true"
            android:gravity="left|center" />
       </ScrollView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/dialog_line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="horizontal" >

        <ImageView

            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="left|center"
            android:src="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_btnleft1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_bg"
            android:text="@string/ok"
            android:textColor="@drawable/dialog_btn_color"
            android:textSize="24sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/dialog_btnright1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn_bg"
            android:text="@string/cancel"
            android:textColor="@drawable/dialog_btn_color"
            android:textSize="24sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>