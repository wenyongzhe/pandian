<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_setting_pattern"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dip"
            android:text="@string/pattern_settings"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <Spinner
            android:id="@+id/spinner1"
            style="@style/style_spinner" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_setting_parameters"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dip"
            android:text="@string/parameter_settings"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_other_settting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dip"
            android:text="@string/other_settings"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_import_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dip"
            android:text="@string/import_btn"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_export_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dip"
            android:text="@string/export"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_scan_display"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dip"
            android:text="@string/scan_display"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <LinearLayout
        android:id="@+id/ll_system_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dip"
            android:text="@string/system_update_settings"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:background="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/view" />

    <GridView
        android:id="@+id/gridview_system_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="30dp"
        android:visibility="gone" >
    </GridView>

</LinearLayout>