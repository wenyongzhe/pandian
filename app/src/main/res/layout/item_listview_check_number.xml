<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_63"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:text="序号："
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="123"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_location"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_63"
        android:layout_marginLeft="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_huowei_cknuml"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/location_tv"
            android:paddingLeft="10dip"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_positionID"
            android:layout_width="160dip"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="2344d3456"
            
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_63"
        android:layout_marginLeft="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/barcode_tv"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_GdBar"
            android:layout_width="180dip"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="234"
            android:textColor="@color/blue"
            style="@style/AutoScrollTextView"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_63"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/quantity_tv"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_nums"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="2341234"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize22" />
    </LinearLayout>

</LinearLayout>